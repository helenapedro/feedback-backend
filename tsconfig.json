{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node", 
    "target": "ES6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"], 
    "types": ["node", "mocha"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist", ".env"]
}